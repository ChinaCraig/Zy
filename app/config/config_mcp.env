# MCP服务配置文件
# 此文件包含MCP (Model Context Protocol) 相关的配置参数

# MCP服务URL
# MCP服务的连接地址
MCP_SERVICE_URL=http://localhost:8080/mcp

# MCP服务API密钥
# 用于访问MCP服务的身份验证密钥
MCP_API_KEY=your_mcp_api_key_here

# MCP服务版本
MCP_API_VERSION=v1

# MCP功能配置
# 启用的MCP功能，多个功能用逗号分隔
MCP_ENABLED_FUNCTIONS=get_weather,get_time,calculate,translate,generate_code,query_data

# MCP功能参数配置
# 天气服务API密钥
WEATHER_API_KEY=your_weather_api_key

# 翻译服务API密钥
TRANSLATE_API_KEY=your_translate_api_key

# 数据查询服务连接信息
DATA_QUERY_DB_HOST=localhost
DATA_QUERY_DB_PORT=5432
DATA_QUERY_DB_USER=postgres
DATA_QUERY_DB_PASSWORD=postgres_password
DATA_QUERY_DB_NAME=analytics

# MCP调试模式
MCP_DEBUG=false

# MCP超时设置（单位：秒）
MCP_TIMEOUT=30

# MCP并发调用限制
MCP_MAX_CONCURRENT_CALLS=5

# MCP功能调用分析模型
# 用于分析用户意图并转换为MCP调用的模型
MCP_ANALYSIS_MODEL=gpt-4

